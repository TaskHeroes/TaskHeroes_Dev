
@{
    ViewData["Title"] = "Task Detail";

    var task_name = "House Keeping";
    var description = "Lorem ipsum dolor sit amet, consectetur adipiscing t, consectetur adipiscing t, consectetur adipiscingconsectetur adipiscing t, consectetur adipiscing" +
                "consectetur adipiscing t, consectetur adipiscingconsectetur adipiscing t, consectetur adipiscingconsectetur adipiscing t, consectetur adipiscing" +
                "consectetur adipiscing t, consectetur adipiscingconsectetur adipiscing t, consectetur adipiscingconsectetur adipiscing t, consectetur adipiscing";
    var work_type = "Onetimetask";
    var offer = "$25";
    var period = "2 days";

    var gallery_image1 = "~/Resources/Images/TaskDetail/task_detail_image_1.jpg";
    var gallery_image2 = "~/Resources/Images/TaskDetail/task_detail_image_2.jpg";
    var gallery_image3 = "~/Resources/Images/TaskDetail/task_detail_image_3.jpg";
}

<link rel="stylesheet" href="~/css/TaskDetail/TaskDetail.css" />

<div class="leftcolumn">
    <div class="box">
        <img src="~/Resources/Images/TaskDetail/task_icon.png" alt="avatar" style="width:100%">
        <h2>Detail</h2>
        <form id="task_info_form">
            <div class="form-group row margin-bottom">
                <label for="work_type" class="col-sm-5 col-form-label">Work Type</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control-plaintext" id="work_type" value=@work_type readonly>
                </div>
            </div>
            <div class="form-group row margin-bottom">
                <label for="Offer" class="col-sm-5 col-form-label">Offer</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control-plaintext" id="offer" value=@offer readonly>
                </div>
            </div>
            <div class="form-group row margin-bottom">
                <label for="work_period" class="col-sm-5 col-form-label">Work Period</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control-plaintext" id="work_period" value=@period readonly>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" id="interested_btn">Interested</button>
        </form>
    </div>
</div>

<div class="rightcolumn">
    <div class="box">
        <div class="header">
            <h1>@task_name</h1>
        </div>
        <p id="description">@description</p>
    </div>
</div>

<div class="rightcolumn">
    <div class="box">
        <h2>Gallery</h2>
        <div id="gallery" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Url.Content(gallery_image1)" class="d-block w-100" alt="Image 1">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content(gallery_image2)" class="d-block w-100" alt="Image 2">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content(gallery_image3)" class="d-block w-100" alt="Image 3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#gallery" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#gallery" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>    
</div>

<script type="text/javascript" src="~/js/TaskDetail/TaskDetail.js"></script>
<script type="text/javascript" src="~/js/TaskDetail/TaskDetail_EventHandler.js"></script>
