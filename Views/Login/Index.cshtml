@model LoginModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Login";

    var userId = Context.Session.GetString("userid");
    if (userId != null)
        Layout = "~/Views/Shared/_Layout_LogIn.cshtml";
}
<link rel="stylesheet" href="~/css/Login/Login.css" />


<!-- MAIN DISPLAY FOR LOGIN FORM - SELECT TO LOGIN-->
<div class="mx-auto">
    <!-- Login as Task Seeker - Employee -->
    <div class="login_employee">
        <img id="eme_img" src="~/Resources/Images/Login/employee_login.png" alt="employee_login" class="avatar" />
        <button id="eme_btn">Login as Task Seeker</button>
    </div>

    <!-- Login as Task Offerer - Employeer -->
    <div class="login_employer">
        <img id="emr_img" src="~/Resources/Images/Login/employer_login.png" alt="employer_login" class="avatar" />
        <button id="emr_btn">Login as Task Offerer</button>
    </div>
</div>

<!-- MODAL FOR LOGIN - SHOWS ON TOP OF THE SCREEN WHEN LOGIN OPTION IS SELECTED -->
<!-- The Modal - Task Seeker - Employee -->
<div id="employee" class="modal">
    <span onclick="document.getElementById('employee').style.display='none'"
          class="close" title="Close Modal">&times;</span>

    <!-- Modal Content -->
    <form class="modal-content animate" asp-controller="Login" asp-action="LoginForTaskSeeker" method="post">
        <div class="imgcontainer">
            <img src="~/Resources/Images/Login/employee_login.png" alt="employee_login" class="avatar" style="width:40%;">
        </div>

        <div class="container">
            <label for="uname"><b>Username</b></label>
            <input asp-for="Username" type="text" placeholder="Enter Username" required>

            <label for="psw"><b>Password</b></label>
            <input asp-for="Password" type="password" placeholder="Enter Password" required>

            <button type="submit">Login</button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" onclick="document.getElementById('employee').style.display='none'" class="cancelbtn">Cancel</button>
            <span class="psw">Don't have an account? @Html.ActionLink("Sign Up", "Signup") for one.</span>
        </div>
    </form>
</div>

<!-- The Modal - Task Offerer - Employeer -->
<div id="employer" class="modal">
    <span onclick="document.getElementById('employer').style.display='none'"
          class="close" title="Close Modal">&times;</span>

    <!-- Modal Content -->
    <form class="modal-content animate" asp-controller="Login" asp-action="LoginForTaskOfferer" method="post">
        <div class="imgcontainer">
            <img src="~/Resources/Images/Login/employer_login.png" alt="employer_login" class="avatar" style="width:40%;">
        </div>

        <div class="container">
            <label for="uname"><b>Username</b></label>
            <input asp-for="Username" type="text" placeholder="Enter Username" required>

            <label for="psw"><b>Password</b></label>
            <input asp-for="Password" type="password" placeholder="Enter Password" required>

            <button type="submit">Login</button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" onclick="document.getElementById('employer').style.display='none'" class="cancelbtn">Cancel</button>
            <span class="psw">Don't have an account? @Html.ActionLink("Sign Up", "SignUp") for one.</span>
        </div>
    </form>
</div>

<script type="text/javascript" src="~/js/Login/Login.js"></script>
<script type="text/javascript" src="~/js/Login/Login_EventHandler.js"></script>