@model UserProfileModel
@{
    ViewData["Title"] = "UserProfile";

    var profile_image = "~/Resources/Images/UserProfile/UserProfile_Sample.jpg";
    var name = "John Doe";
    var email = "example@uregina.ca";
    var description = "Testing description. abaesfawefkjasdkfj asdjfasdjfpasodfajsdf";
    var status = "Active";
    var user_review = "4";
    var member_since = "02/02/2020";

    var username = "username123";
    var firstname = "John";
    var lastname = "Doe";
    var city = "Regina";
    var province = "SK";
}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/UserProfile/UserProfile.css"/>

    <!-- Hidden fields for values that need to be passed into javascript -->
    <input type="hidden" id="user_review" name="user_review" value=@user_review />
    <h1>User Profile Page</h1>
    <div class="leftcolumn">
        <div class="card">
            <img src="@Url.Content(profile_image)" alt="John" style="width:100%">
            <h1>@name</h1>
            <p>@description</p>
            <table>
                <tr>
                    <td>Status</td>
                    <td>@status</td>
                </tr>
                <tr>
                    <td>User Rating</td>
                    <td>
                        <div class="stars-outer">
                            <div class="stars-inner"></div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Member Since</td>
                    <td>@member_since</td>
                </tr>
            </table>
            <p><button>Contact @name</button></p>
            <p><button id="edit_profile_btn">Edit Profile</button></p>

            <p><button id="save" style="display:none;"></button></p>
        </div>
    </div>
    
    <div class="rightcolumn">
        <div class="user_info">
            <h1>User Info</h1>
            <form id="user_info_form">
                <div class="form-group row">
                    <label for="username" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username" value=@username>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" value=@email>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="fname" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="fname" value=@firstname>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="lname" value=@lastname>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="city" class="col-sm-2 col-form-label">City</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="city" value=@city>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="province" class="col-sm-2 col-form-label">Province</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="province" value=@province>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button id="update_profile_btn" class="btn btn-primary">Update Profile</button>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button id="save_btn" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="job_history">
        <h1>Task History</h1>

    </div>


<script type="text/javascript" src="~/js/UserProfile/UserProfile.js"></script>
<script type="text/javascript" src="~/js/UserProfile/UserProfile_EventHandler.js"></script>